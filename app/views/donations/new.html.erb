<%= form_with url: masjid_fundraiser_donations_path(params[:masjid_id], @fundraiser_id), method: :post, data: { controller: "stripe", action: "submit->stripe#handleSubmit",stripe_target: "form", turbo: "false" } do |form| %>
  <div class="form-group">
    <%= form.label :amount, "Donation Amount" %>
    <%= form.number_field :amount, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :contact_email, "Your Email" %>
    <%= form.email_field :contact_email, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :contact_first_name, "First Name" %>
    <%= form.text_field :contact_first_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :contact_last_name, "Last Name" %>
    <%= form.text_field :contact_last_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :contact_phone_number, "Phone Number" %>
    <%= form.telephone_field :contact_phone_number, class: "form-control", required: true %>
  </div>

  <!-- Stripe Card Element -->
  <div id="card-element" data-stripe-target="cardElement"></div>

  <%= form.hidden_field :payment_method, id: "payment_method" %>

  <%= form.submit "Donate", class: "btn btn-success" %>
<% end %>
