<section class="bg-white py-24 px-2 dark:bg-gray-900 antialiased">
  <div class="mx-auto max-w-xl px-4 py-8 mx-auto lg:px-6 sm:py-16 lg:py-24">
    <% if @success %>
      <%= render 'donations/success', locals: { donation: @donation } %>
    <% elsif @processing %>
      <%= render 'donations/processing', locals: { donation: @donation } %>
    <% else %>
      <%= render 'donations/error', locals: { error: params[:error_message] } %>
    <% end %>
  </div>
</section>
